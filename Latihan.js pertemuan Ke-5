// Definisi kelas Orang
class Orang {
    constructor(nama, alamat) {
        this.nama = nama;
        this.alamat = alamat;
    }

    tampilkanInformasi() {
        return `Nama: ${this.nama}, Alamat: ${this.alamat}`;
    }

    tampilkanPeran() {
        return "Peran: Orang biasa";
    }
}

// Definisi kelas Mahasiswa yang merupakan turunan dari Orang
class Mahasiswa extends Orang {
    constructor(nama, alamat, nim) {
        super(nama, alamat);
        this.nim = nim;
    }

    tampilkanInformasi() {
        return `${super.tampilkanInformasi()}, NIM: ${this.nim}`;
    }

    tampilkanPeran() {
        return "Peran: Mahasiswa";
    }
}

// Definisi kelas Dosen yang merupakan turunan dari Orang
class Dosen extends Orang {
    constructor(nama, alamat, nidn) {
        super(nama, alamat);
        this.nidn = nidn;
    }

    tampilkanInformasi() {
        return `${super.tampilkanInformasi()}, NIDN: ${this.nidn}`;
    }

    tampilkanPeran() {
        return "Peran: Dosen";
    }
}

// Definisi OrangView untuk render informasi
class OrangView {
    render(orang) {
        return orang.tampilkanInformasi();
    }
}

// Definisi OrangController untuk mengatur tampilan
class OrangController {
    constructor(model, view) {
        this.model = model;
        this.view = view;
    }

    tampilkanOrang() {
        const mahasiswa = new this.model.Mahasiswa("Renaldi Sentosa", "KP. Cibereum", "202301110010");
        const dosen = new this.model.Dosen("Pak Junaidi", "Jl. Gandoang", "202301110020");

        console.log(this.view.render(mahasiswa));
        console.log(this.view.render(dosen));
    }
}

// Inisialisasi dan Penggunaan
const orangController = new OrangController({ Mahasiswa, Dosen }, new OrangView());
orangController.tampilkanOrang();

// Demonstrasi Polimorfisme
const orang1 = new Orang("Orang Biasa", "Jl. Biasa");
const mahasiswa1 = new Mahasiswa("Ani", "Jl. Pendidikan", "987654");
const dosen1 = new Dosen("Bu Susi", "Jl. Ilmu", "456789");

console.log(orang1.tampilkanPeran());    // Output: Peran: Orang biasa
console.log(mahasiswa1.tampilkanPeran()); // Output: Peran: Mahasiswa
console.log(dosen1.tampilkanPeran());     // Output: Peran: Dosen
